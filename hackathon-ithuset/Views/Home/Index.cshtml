@model string
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Model
<input type="text" name="query" id="query" />
<button class="search" onclick="getResult()">Sök</button>

<div id="result">

</div>

<script>
    function getResult() {
        var xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function () {
            $("#result").empty();
            if (this.readyState == 4 && this.status == 200) {

                var jsonobj = JSON.parse(this.responseText);
                var list = jsonobj.xsearch.list;

                // TODO: Present beautifully
                for (var i = 0; i < list.length; i++) {
                    var isbn = list[i].isbn;
                    if(typeof instanceof Array)
                        isbn = isbn[0];

                    $("#result").append("<div>" + 
                                        "<h3> Title: " + list[i].title + "</h3>" +
                                        "<h5> Cteator: " + list[i].creator + "</h5>" +
                                        "<br>" + 
                                        "<strong> Date: </strong>" + list[i].date +
                                        "<br>" + 
                                        "<strong> Language: " + list[i].language + 
                                        "<a href='/Home/Book/" + isbn + "'>View Book</a>" + 
                                        "</div>");
                }
            }
        }
        xhttp.open("GET", "http://libris.kb.se/xsearch?query=" + document.getElementById("query").value + "&format=json", true);
        xhttp.send();
    }
</script>
